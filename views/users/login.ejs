<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Log In on Explore World</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control input-border" required />
                <div class="invalid-feedback">
                  Username is required.
                </div>
                <div class="valid-feedback">
                  Username looks good.
                </div>
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control input-border" required />
                <div class="invalid-feedback">
                  Password is required.
                </div>
                <div class="valid-feedback">
                  Password looks good.
                </div>
              </div>
              <button type="submit" class="btn btn-success add-btn">Log In</button>
        </form>
    </div>
</div>