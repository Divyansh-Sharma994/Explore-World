<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3 mb-3 text-center">Create New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" class="form-control input-border" required />
        <div class="invalid-feedback">
          Title should be valid.
        </div>
        <div class="valid-feedback">
          Title is valid.
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control input-border" required></textarea>
          <div class="invalid-feedback">
            Description should be valid.
          </div>
          <div class="valid-feedback">
            Description is valid.
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input name="listing[image]" type="text" class="form-control input-border" />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" class="form-control input-border" required />
            <div class="invalid-feedback">
              Price should be valid.
            </div>
            <div class="valid-feedback">
              Price is valid.
            </div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" class="form-control input-border" required />
            <div class="invalid-feedback">
              Country should be valid.
            </div>
            <div class="valid-feedback">
              Country is valid.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" class="form-control input-border" required />
          <div class="invalid-feedback">
            Location should be valid.
          </div>
          <div class="valid-feedback">
            Location is valid.
          </div>
        </div>
        <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
</div>